@model IEnumerable<NotesWebApp.Models.Notes>

@{
    ViewData["Title"] = "Dashboard";
    var username = Context.Session.GetString("Username") ?? "User";
    bool favoritesOnly = ViewBag.FavoritesOnly ?? false;
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 style="color:white">Welcome, @username!</h3>

        <form method="get" class="d-inline">
            <input type="hidden" name="favorites" value="@(favoritesOnly ? "false" : "true")" />
            <button type="submit" class="btn btn-sm @(favoritesOnly ? "btn-warning" : "btn-outline-warning")">
                @(favoritesOnly ? "Show All Notes" : "Show Favorites")
            </button>
        </form>

    </div>

    <div class="row g-4">
        @foreach (var note in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@note.Title</h5>
                        <p class="card-text text-truncate" style="max-height: 100px; overflow: hidden;">
                            @note.Content
                        </p>

                        <div class="mt-auto d-flex justify-content-between align-items-center">

                            <form asp-action="ToggleFavorite" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@note.Id" />
                                <input type="hidden" name="favorites" value="@favoritesOnly" />
                                <button type="submit" class="btn btn-sm @(note.IsFavorite ? "btn-warning" : "btn-outline-warning")">
                                    <i class="bi bi-star-fill"></i> @(note.IsFavorite ? "Unfavorite" : "Favorite")
                                </button>
                            </form>

                            <div>
                                <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-sm btn-primary">Edit</a>

                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@note.Id">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="deleteModal-@note.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@note.Id" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title" id="deleteModalLabel-@note.Id">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete <strong>@note.Title</strong>?
                        </div>
                        <div class="modal-footer">
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@note.Id" />
                                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                            </form>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
